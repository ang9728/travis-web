{{#if this.enabled}}
  <div class="notice-banner--yellow align-center">
    {{this.message}}
    <span class="flash-message">
      <button type="button" class="no-button close" {{action this.closeBanner}}>
        <SvgImage @name="flash-close" @class="icon" />
      </button>
    </span>
  </div>
{{/if}}